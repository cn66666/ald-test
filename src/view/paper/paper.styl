.paper-page{
  background: #F6F9FE;
  padding: 0 10px;
  .container{
    background: #fff;
    color: #4C5061;
    max-width: 1040px;
    margin 0 auto
    padding 30px 40px
    font-size: 12px;
    box-shadow: 0px 2px 6px 0px #EAF3FC;
    .caption{
      line-height: 40px;
      h2{
        font-size: 16px;
        span{
          font-size: 12px;
          padding 0 0 0 30px
          font-weight: normal;
        }
      }
      .times{
        color: #B5B6B9;
        text-align: right;
      }
    }
    .box{
      h3{
        font-size: 14px;
        line-height: 40px;
        padding: 30px 0 7px;
        span{
          font-size: 12px;
          padding 0 0 0 30px
          font-weight: normal;
        }
      }
      .idea{
        line-height: 30px;
        padding: 0 0 6px;
        p{
          display: inline-block;
          min-width 180px
          margin 0 10px 0 0;
          span{
            color: #2E69FF;
          }
        }
      }
    }
  }
}